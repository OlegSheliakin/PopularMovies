<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:context="home.oleg.popularmovies.presentation.detail.DetailActivity">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="@dimen/width_iv_poster"
            android:layout_height="@dimen/heigth_iv_poster"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_small"
            android:adjustViewBounds="false"
            android:contentDescription="@string/image"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvReleaseAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivPoster"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivPoster"
            tools:text="Release date: 2017-06-12" />

        <RatingBar
            android:id="@+id/rbUserRating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvReleaseAt"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_toEndOf="@+id/ivPoster"
            android:numStars="10"
            android:stepSize=".5" />

        <TextView
            android:id="@+id/tvPostSynopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPoster"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/margin_big"
            tools:text="Post synopsis" />

        <include
            android:id="@+id/layoutVideos"
            layout="@layout/layout_videos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPostSynopsis" />

        <include
            android:id="@+id/layoutReviews"
            layout="@layout/layout_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutVideos" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_star_black_24dp"
        app:fabSize="mini"
        app:layout_anchor="@id/ivPoster"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>